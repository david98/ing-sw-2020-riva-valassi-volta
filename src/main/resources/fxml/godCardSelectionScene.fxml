<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane fx:id="mainPane" styleClass="mainPane" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.polimi.vovarini.view.gui.controllers.GodCardSelectionController">
    <stylesheets>
        <URL value="@../css/godCardSelectionScene.css"/>
    </stylesheets>

    <top>
        <VBox alignment="CENTER" styleClass="topBox">
            <Label styleClass="menuTitle" text="Choose your godCard:"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" styleClass="allGodsBox">
            <Label fx:id="instruction" styleClass="prompt"/>
            <FlowPane alignment="CENTER" columnHalignment="CENTER" styleClass="godsPane">
                <ImageView fx:id="godCard0" fitWidth="150" preserveRatio="true" styleClass="godCard"/>
                <ImageView fx:id="godCard1" fitWidth="150" preserveRatio="true" styleClass="godCard"/>
                <ImageView fx:id="godCard2" fitWidth="150" preserveRatio="true" styleClass="godCard"/>
            </FlowPane>
            <FlowPane styleClass="labelsPane">
                <Label fx:id="label0" prefWidth="150" styleClass="cardLabel" wrapText="true"/>
                <Label fx:id="label1" prefWidth="150" styleClass="cardLabel" wrapText="true"/>
                <Label fx:id="label2" prefWidth="150" styleClass="cardLabel" wrapText="true"/>
            </FlowPane>
        </VBox>
    </center>
</BorderPane>
