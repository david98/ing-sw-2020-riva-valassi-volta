<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import java.net.URL?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.polimi.vovarini.view.gui.controllers.RegistrationController" fx:id="mainPane"
            styleClass="mainPane">
    <stylesheets>
        <URL value="@../css/registrationScene.css"/>
    </stylesheets>

    <top>
        <VBox styleClass="topBox">
            <Label text="Registration" styleClass="menuTitle"/>
        </VBox>
    </top>

    <center>
        <HBox styleClass="voteHBox">
            <VBox styleClass="allGodsBox">

                <Label fx:id="error" styleClass="menuLabel"/>

                <Label text="Enter your nickname:" styleClass="menuLabel"/>
                <TextField fx:id="nicknameField" text="" styleClass="menuTextField"/>

                <Button fx:id="submit" onAction="#onButtonClick">
                </Button>
            </VBox>
        </HBox>
    </center>

</BorderPane>
