<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import java.net.URL?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.polimi.vovarini.view.gui.RegistrationController" fx:id="mainPane" styleClass="mainPane">
    <stylesheets>
        <URL value="@../css/registrationScene.css"/>
    </stylesheets>

    <top>
        <VBox styleClass="topBox">
            <Label text="Welcome to Santorini" styleClass="menuTitle"/>
        </VBox>
    </top>

    <center>
        <HBox styleClass="voteHBox">
            <VBox styleClass="voteBox">

                <Label fx:id="error" styleClass="menuLabel"/>

                <Label text="Enter your username:" styleClass="menuLabel"/>
                <TextField fx:id="nicknameField" styleClass="menuTextField"/>

                <Label text="Enter server address:" styleClass="menuLabel"/>
                <TextField fx:id="addressField" text="localhost" styleClass="menuTextField"/>

                <Label text="Enter server port:" styleClass="menuLabel"/>
                <TextField fx:id="portField" text="6666" styleClass="menuTextField"/>

                <Button fx:id="submit" onAction="#onButtonClick">Submit</Button>
            </VBox>
        </HBox>
    </center>

</BorderPane>
